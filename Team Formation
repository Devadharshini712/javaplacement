import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
       
        Scanner sc = new Scanner(System.in);
        int tp = sc.nextInt();
        int pp = sc.nextInt();
        int a = tp/pp;
        int b = tp%pp;
        
        System.out.println("Total teams formed: "+a);
        System.out.println("Players left out: "+b);
        
    }
}
