import java.util.*;

public class Solution {

    public static void main(String[] args) {
       
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int sum = 0;
        
        for(int i = 0;i<=n;i++){
            sum = sum + i;
        }
            System.out.println(sum);
    
        int fact = 1;
        for(int j = 1;j<=n;j++){
            fact = fact*j;
        }
             System.out.println(fact);
        }
        }
    
